                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State Message -->
                <TextBlock Text="ChÆ°a cÃ³ dá»¯ liá»‡u kiá»ƒm Ä‘á»‹nh"
                         FontSize="16"
                         Foreground="#666666"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
