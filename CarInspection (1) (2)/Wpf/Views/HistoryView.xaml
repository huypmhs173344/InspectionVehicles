                         RowStyle="{StaticResource DataGridRowStyle}"
                         CellStyle="{StaticResource DataGridCellStyle}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         Margin="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NgÃ y Kiá»ƒm Äá»‹nh" 
                                          Binding="{Binding InspectionDate, StringFormat=dd/MM/yyyy}"
                                          Width="120"/>
                        <DataGridTextColumn Header="Tráº¡m ÄÄƒng Kiá»ƒm" 
                                          Binding="{Binding Station.Name}"
                                          Width="200"/>
                        <DataGridTextColumn Header="Káº¿t Quáº£" 
                                          Binding="{Binding Result}"
                                          Width="100"/>
                        <DataGridTextColumn Header="COâ‚‚ (g/km)" 
                                          Binding="{Binding Co2emission}"
                                          Width="100"/>
